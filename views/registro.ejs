<%-include("./partials/closeHead")%>
<main class="form-signin contenedor w-100 m-auto">
    <form action="/registro" method="post" class="formulario">
      <img class="mb-4" src="https://ih1.redbubble.net/image.438908244.6144/st,small,507x507-pad,600x600,f8f8f8.u2.jpg" alt="" width="72" height="57">
      <h1 class="h3 mb-3 fw-normal">Registro</h1>
  
      <div class="form-floating">
        <input name="email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">Email </label>
      </div>
      <div class="form-floating">
        <input name="username" type="text" class="form-control" id="floatingInput" placeholder="neo">
        <label for="floatingInput">Username</label>
      </div>
      <div class="form-floating">
        <input name="nombre" type="text" class="form-control" id="floatingInput" placeholder="Thomas Andersson">
        <label for="floatingInput">Nombre</label>
      </div>
      <div class="form-floating">
        <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
      </div>
      <!-- confirmar password ------ -->
      <div class="form-floating">
        <input name="confirmacion" type="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Confirmar Password</label>
      </div>
      <p class="esconderError textoError" id="errorMsg">Password no coincide</p>
      <div class="checkbox mb-3">
      </div>
      <button class="w-100 btn btn-lg btn-success" type="submit">Registrarse</button>
      <p class="mt-5 mb-3 text-muted">Â©AR 2022</p>
    </form>
  </main>  

